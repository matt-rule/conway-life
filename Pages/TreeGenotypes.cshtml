@page
@model TreeGenotypesModel
@{
    ViewData["Title"] = "Home page";
}

@section Scripts {
    <script src="~/js/tree_genotypes.bundle.js" type="text/javascript"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/tree-genotypes.css" asp-append-version="true" />
}

<partial name="_ProjectMenuPartial" />

<div class="page-flex-container">
  <div class="flex-item flex-item-20">
    <div class="flex-container-inner-left">
        <div class="flex-item-inner-simple">
        </div>
        <div class="flex-item-inner-simple">
            <input type="button" id="initialise_button" value="Initialise"></input>
            <input type="button" id="replicate_button" value="Replicate"></input>
            @* todo: rename to elitism_select_button *@
            <input type="button" id="fitness_based_selection_button" value="Elitism Select"></input>
        </div>
        <div class="flex-item-inner-simple">
            <div id="info_panel" class="light-text"></div>
        </div>
    </div>
    </div>
    <div class="flex-item flex-item-80">
        <div class="flex-container-inner-right">
            @for (int i = 0; i < 16; i++)
            {
                <div class="flex-item-inner-25">
                    <div class="organism-panel">
                        <canvas class="canvas-fill-parent" id="@("canvas_" + i)"></canvas>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

